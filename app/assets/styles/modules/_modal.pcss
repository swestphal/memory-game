        }
    }
    @-o-keyframes animationFrames {
        0% {
            bottom: 1000px;
            opacity: 0;
        }

        70% {
            bottom: -50px;
            opacity: 1;
        }

        80% {
            bottom: 80px;
        }

        90% {
            bottom: 20px;
        }

        100% {
            bottom: 30px;
        }
    }
}

