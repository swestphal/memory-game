@define-mixin atSmall {
  @media (min-width:500px) {
  @mixin-content;
  }
}

@define-mixin atMedium {
  @media (min-width:800px) {
  @mixin-content;
  }
}

@define-mixin atLarge {
  @media (min-width:1010px) {
  @mixin-content;
  }
}


@define-mixin clearfix {
  &::after {
    content:"";
    clear:both;
    display:table; /*better browser-support*/
  }
}